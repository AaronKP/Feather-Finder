<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        !-- Customize button text color -->
        <item name="colorAccent">@color/black</item>

        <!-- Custom styles for the buttons -->
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

    <!-- Custom AlertDialog theme -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize button text color -->
        <item name="colorAccent">@color/black</item>

        <!-- Custom styles for the buttons -->
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

    <!-- Custom style for the positive button -->
    <style name="AlertDialogPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <!-- Custom style for the negative button -->
    <style name="AlertDialogNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#D3091B</item>
    </style>

</resources>

