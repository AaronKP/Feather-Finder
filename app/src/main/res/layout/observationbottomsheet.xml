<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/dialogbackground"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myComNametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Blue-and-white flycatcher"
            android:textColor="@color/dark_green"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mySciNametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Cyanoptila cyanomelana"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/myLocationtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:padding="10dp"
            android:text="Varsity College, Sandton"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/myDatetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 August 2023"

            android:layout_gravity="center"
            android:textColor="@color/dark_green"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/myTimetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11h30"

            android:layout_gravity="center"
            android:textColor="@color/dark_green"
            android:textSize="20dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/obsimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/birddefault"
            android:layout_marginBottom="10dp"
            app:civ_border_width="2dp" />

        <Button
            android:id="@+id/detailsbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/sage_green"
            android:text="View More Details" />
    </LinearLayout>


</LinearLayout>