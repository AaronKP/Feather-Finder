<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="120dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:backgroundTint="@color/dark_orange">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/birdImg1"
                android:layout_width="83dp"
                android:layout_height="91dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bird1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myComNametxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Blue-and-white flycatcher"
                    android:textColor="@color/dark_green"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/mySciNametxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Cyanoptila cyanomelana"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/myDatetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 August 2023"
                    android:textColor="@color/dark_green"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/myTimetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11h30"
                    android:textColor="@color/dark_green"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>